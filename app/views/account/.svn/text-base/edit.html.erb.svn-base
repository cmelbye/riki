<div class="page_header">
	<h1>User Preferences</h1>
</div>

<%= error_messages_for :user %>
<% form_for :user do |f| -%>

<p><b><label for="realname">Real Name</label></b>
<%= f.text_field :realname %></p>

<p><b><label for="email">Email</label></b>
<%= f.text_field :email %></p>

<p><b><label for="password">Password</label></b>
<%= f.password_field :password %></p>

<p><b><label for="password_confirmation">Confirm Password</label></b>
	(Only required if changing password)<br />
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Update' %></p>
<% end -%>
